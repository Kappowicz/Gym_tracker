<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gym_Tracker.LoadWorkout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="LoadWorkoutContentPage"
    Title="LoadWorkout">
    <ScrollView>
        <AbsoluteLayout>
            <VerticalStackLayout
                Margin="20"
                AbsoluteLayout.LayoutBounds="0.5, 0"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Spacing="10">
                <Label
                    x:Name="LoadWorkoutVolumeText"
                    AbsoluteLayout.LayoutBounds="0.5,0"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    Text="Workout Volume: 0kg." />
                <VerticalStackLayout
                    x:Name="LoadWorkoutVerticalStackLayout"
                    Margin="20"
                    Spacing="10" />
            </VerticalStackLayout>
            <Button
                x:Name="StartStopWorkoutButton"
                AbsoluteLayout.LayoutBounds="0.5,1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="StartStopWorkoutButtonClicked"
                Text="Start workout" />
        </AbsoluteLayout>
    </ScrollView>
</ContentPage>