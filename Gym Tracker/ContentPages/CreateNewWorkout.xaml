<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gym_Tracker.CreateNewWorkout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CreateNewWorkout">
    <ScrollView>
        <AbsoluteLayout>
            <VerticalStackLayout
                Margin="20"
                AbsoluteLayout.LayoutBounds="0.5, 0"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Spacing="10">
                <Entry x:Name="WorkoutName" Placeholder="Enter workout name" />
                <VerticalStackLayout
                    x:Name="CreateNewWorkoutVerticalStackLayout"
                    Margin="10"
                    Spacing="10" />
                <Button Clicked="AddNewExerciseButtonClicked" Text="Add New Exercise" />
            </VerticalStackLayout>
            <Button
                x:Name="SaveAndGoBackButton"
                AbsoluteLayout.LayoutBounds="0.5, 1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="SaveAndGoBackButtonClicked"
                Text="Save And Go Back" />
        </AbsoluteLayout>
    </ScrollView>
</ContentPage>