<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym_Tracker.CreateNewWorkout"
             Title="CreateNewWorkout">
    <VerticalStackLayout x:Name="CreatenewWorkoutVerticalStackLayout">
        <Label 
            Text="There will be whole ui to create new workout"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="WorkoutName"
        Placeholder="Enter workout name" />
        <Button Text="Add New Exercise" Clicked="AddNewExerciseButtonClicked" />
        <Button Text="Save And Go Back" Clicked="SaveAndGoBackButtonClicked" />
    </VerticalStackLayout>
</ContentPage>